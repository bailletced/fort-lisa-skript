function game_start(world: world):
  if game_store_count() is 0:
    set {_gameUuid} to game_store_create()
    game_store_set({_gameUuid}, "STATUS", "PREPARING")
    game_store_set({_gameUuid}, "WORLD", {_world})
    world_store_set({_world}, "GAMEUUID", {_gameUuid})
    mob_store_delete_all()
    set {_lisa} to lisa_summon({_gameUuid})
    # TODO : determine which players should be part of the game
    loop all players:
      game_store_player_add({_gameUuid}, loop-player)
      player_clean(loop-player)
      wait 2 tick #We must wait for clean to be finished.
      player_init(loop-player, {_gameUuid})
      player_store_music_set(loop-player, "TAVERN_0")
  
  #GAME PREPARATION
  set {_timer} to 30
  while {_timer} > 0:
    loop game_store_players({_gameUuid}):
      player_interface_title(loop-player, "%{_timer}%", "", 1 second)
    remove 1 from {_timer}
    wait 1 second

  #GAME FINAL INIT
  game_store_set({_gameUuid}, "STATUS", "RUNNING")
  lisa_listeners({_lisa})
  wave_init({_gameUuid})

# END OF THE GAME
function game_end(gameUuid: text, victory: boolean = false):
  delete {game::*}
  set {_world} to world_store_get({_world}, "GAMEUUID")
  world_store_delete({_world})
  game_store_delete({_gameUuid})
  kill {LISA::%{_gameUuid}%}
  execute console command "/npc remove all"
  player_interface_tablist_footer_clean_all()
  loop all entities:
    set {_mob} to loop-value
    if entity_nbt_get_tag({_mob}, "TYPE") is "MOB":
      entity_nbt_delete({_mob}, "TYPE")
      kill {_mob}
    if loop-value is a player:
      if player_store_game_get(loop-value, "STATUS") is "RUNNING":
        player_clean(loop-value)
        wait 2 tick #We must wait for clean to be finished.
        player_interface_sound_stop_all(loop-value)
        player_store_music_delete_all(loop-value)
        if {_victory} is true:
          player_interface_title(loop-value, i18n(loop-value, "GAME.WIN"), "", 3 seconds)
        else:
          player_interface_title(loop-value, i18n(loop-value, "GAME.LOSE"), "", 3 seconds)
      give 1 of item_utility_create(loop-value, "GAME", "START") to loop-value


function game_inprogress(gameUuid: text):
  while game_store_isset({_gameUuid}) is true:
    player_interface_sound_play(game_store_players({_gameUuid}), "WAVE", "MAIN", 0.5, 4000)

# Called when a BOSS wave starts
function game_bossAppear(gameUuid: text, music: text):
  #PLAY MAIN MUSIC
  loop game_store_players({_gameUuid}):
    player_store_music_set(loop-player, "BOSS_GOULIATH")

# When a BOSS die
function game_bossDie(boss: entity):
  set {_world} to world of {_boss}
  set {_gameUuid} to world_store_get({_world}, "GAMEUUID")
  if {_gameUuid} is set:
    game_end({_gameUuid}, true)