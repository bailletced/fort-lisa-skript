on right click:
  set {_p} to player
  set {_targetName} to name of target
  if {_targetName} is {NPC::LISA::NAME}:
    lisa_rightClick()
  else:
    set {_item} to tool
    set {_itemType} to item_nbt_get_tag({_item}, "TYPE")
    if {_itemType} is "SKILL":
      skill_cast({_p}, {_item})
      cancel event