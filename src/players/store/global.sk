function player_store_global_set(p: player, key: text, value: object):
  set {players::%{_p}%::global::%{_key}%} to {_value}

function player_store_global_get(p: player, key: text) :: object:
  return {players::%{_p}%::global::%{_key}%}

function player_store_global_isset(p: player, key: text) :: boolean:
  if {players::%{_p}%::global::%{_key}%} is set:
    return true
  return false