function test_item_weapon(p: player):
  send "ยง5Testing items weapon" to the console 
  it "Test weapon give":
    clear inventory of {_p}
    weapon_give({_p}, "STAFF", "LIMB_OF_WISDOM")
    set {_weapon} to slot 0 of inventory of {_p}
    set {_type} to item_get_tag({_weapon}, "TYPE")
    set {_category} to item_get_tag({_weapon}, "CATEGORY")
    set {_id} to item_get_tag({_weapon}, "ID")

    assert if {_type} is "WEAPON" with message "item type should be WEAPON. Got %{_type}%"
    assert if {_category} is "STAFF" with message "weapon category should be STAFF. Got %{_category}%"
    assert if {_id} is "LIMB_OF_WISDOM" with message "weapon id should be LIMB_OF_WISDOM. Got %{_id}%"

  it "test weapon reload all":
    clear inventory of {_p}
    player_store_stat_set({_p}, "POWER", 10)

    set {_weaponReference} to item_create({_p}, "WEAPON", "STAFF", "LIMB_OF_WISDOM")
    set slot 0 of {_p} to stone
    weapon_give({_p}, "STAFF", "LIMB_OF_WISDOM")
    set {_initialCount} to player_store_weapon_count({_p})
    set {_power} to item_get_stat({_weaponReference}, "POWER")
    set {_powerMultiplier} to item_get_stat({_weaponReference}, "POWER_MULTIPLIER")
    set {_finalPower} to {_power} + {_power} * {_powerMultiplier}

    assert if slot 0 of {_p} is stone with message "slot 0 of player should be stone. Got %slot 0 of {_p}%"
    assert if the line 2 of lore of {_weaponReference} contains "%{_finalPower}%" with message "lore should contain a final power of %{_finalPower}%. Got %line 2 of lore of {_weaponReference}%"
    assert if slot 1 of {_p} is {_weaponReference} with message "slot 1 of player should be %{_weaponReference}%. Got %slot 1 of {_p}%"

    player_store_stat_set({_p}, "POWER", 100)
    set {_finalCount} to player_store_weapon_count({_p})
    set {_finalPower} to {_power} + 100 * {_powerMultiplier}
    assert if the line 2 of lore of slot 1 of {_p} contains "%{_finalPower}%" with message "lore should contain a final power of %{_finalPower}%. Got %line 2 of lore of slot 1 of {_p}%"
    assert if {_initialCount} is {_finalCount} with message "total weapon count should be %{_initialCount}%. Got %{_finalCount}%"
